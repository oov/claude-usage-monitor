{
  "manifest_version": 3,
  "name": "Claude Usage Monitor",
  "version": "1.0.0",
  "description": "Monitor Claude.ai usage limits with visual charts and periodic updates",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://claude.ai/*"
  ],
  "action": {
    "default_title": "Claude Usage Monitor"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "icon.png"
  }
}